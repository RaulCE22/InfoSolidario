<!DOCTYPE html>
<html>
<head>
  <title>Infosolidario</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
	<header>
		<nav class="navbar navbar-inverse">
			<div class="container-fluid">
				<div class="row">
					<div class="navbar-header col-sm-3">
						<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-1">
							<span class="sr-only">Menu</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
						<a href="#" class="navbar-brand">Raul Calle</a>
					</div>
					<div class="collapse navbar-collapse navbar-right col-sm-7" id="navbar-1">
						<ul class="nav navbar-nav">
							<li id="navbarContact">
								<%= link_to "Donaciones", donaciones_index_path%>
							</li>
							<li id="navbarContact">
								<%= link_to "Productos", productos_index_path%>
							</li>
							<% if donante_signed_in? %>
							<li>
								<%= link_to "Cerrar sesion", destroy_donante_session_path, method: :delete%>
							</li>
							<% else %>
							<li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Sign Up<span class="caret"></span></a>
								<ul class="dropdown-menu">
									<li>
										<%= link_to "Donante", new_donante_registration_path%>
									</li>
									<li>
										<%= link_to "Empresa", new_empresa_registration_path%>
									</li>
									<li>
										<%= link_to "ONG", new_ong_registration_path%>
									</li>
								</ul>
							</li>
							<li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Sign In<span class="caret"></span></a>
								<ul class="dropdown-menu">
									<li>
										<%= link_to "Donante", new_donante_session_path%>
									</li>
									<li>
										<%= link_to "Empresa", new_empresa_session_path%>
									</li>
									<li>
										<%= link_to "ONG", new_ong_session_path%>
									</li>
								</ul>
							</li>
							<%end%>		
						</ul>
					</div>
				</div>
			</div>
		</nav>
	</header>
</div>

	<div class="container">
		<%= yield %>
	</div>
</body>
</html>
